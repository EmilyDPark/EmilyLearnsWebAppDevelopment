    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreationDetails</title>
</head>
<body>
    <br />
    <h2>Details</h2>

    <div>
        <h4>Creation</h4>
        <hr />
